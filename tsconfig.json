{
    "compilerOptions": {
        "target":"es2020",
        "module":"esnext",
        "moduleResolution":"bundler",
        "forceConsistentCasingInFileNames":true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": false,
        "noEmit": true,
        "typeRoots":["src/@types","node_modules/@types"]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test/**/*.test.ts"
    ]
}
